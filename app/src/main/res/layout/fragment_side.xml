<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SideFragment">

    <data>
        <variable
            name="sideFragment"
            type="com.example.lunchtray.SideFragment" />

        <variable
            name="viewModel"
            type="com.example.lunchtray.model.LunchViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <RadioGroup
                android:id="@+id/side_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@{viewModel.side.equals(@string/summer_salad)}"
                    android:onClick="@{() -> viewModel.setSide(@string/summer_salad)}"
                    android:text="@string/summer_salad">
                </RadioButton>

                <TextView
                    style="@style/Description_textview"
                    android:text="@string/summer_salad_description">
                </TextView>

                <TextView
                    style="@style/Price_textview"
                    android:text="@string/summer_salad_price">
                </TextView>

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/margin_between_elements"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@{viewModel.side.equals(@string/butternut_squash_soup)}"
                    android:onClick="@{() -> viewModel.setSide(@string/butternut_squash_soup)}"
                    android:text="@string/butternut_squash_soup">
                </RadioButton>

                <TextView
                    style="@style/Description_textview"
                    android:text="@string/butternut_squash_soup_description">
                </TextView>

                <TextView
                    style="@style/Price_textview"
                    android:text="@string/butternut_squash_soup_price">
                </TextView>

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/margin_between_elements"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@{viewModel.side.equals(@string/spicy_potatoes)}"
                    android:onClick="@{() -> viewModel.setSide(@string/spicy_potatoes)}"
                    android:text="@string/spicy_potatoes">
                </RadioButton>

                <TextView
                    style="@style/Description_textview"
                    android:text="@string/spicy_potatoes_description">
                </TextView>

                <TextView
                    style="@style/Price_textview"
                    android:text="@string/spicy_potatoes_price">
                </TextView>

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/margin_between_elements"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="@{viewModel.side.equals(@string/coconut_rice)}"
                    android:onClick="@{() -> viewModel.setSide(@string/coconut_rice)}"
                    android:text="@string/coconut_rice">
                </RadioButton>

                <TextView
                    style="@style/Description_textview"
                    android:text="@string/coconut_rice_description">
                </TextView>

                <TextView
                    style="@style/Price_textview"
                    android:text="@string/_1_50">
                </TextView>

                <View
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/margin_between_elements"/>

            </RadioGroup>


            <TextView
                android:id="@+id/subtotal"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/side_options"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@{@string/subtotal_price(viewModel.price)}"
                >
            </TextView>

            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{() -> sideFragment.cancelOrder()}"
                app:layout_constraintTop_toTopOf="@id/next_button"
                app:layout_constraintEnd_toStartOf="@id/next_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="16dp"
                android:text="@string/cancel"/>

            <Button
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between_elements"
                android:onClick="@{() -> sideFragment.goToNextScreen()}"
                app:layout_constraintStart_toEndOf="@id/cancel_button"
                app:layout_constraintTop_toBottomOf="@id/subtotal"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/next"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>